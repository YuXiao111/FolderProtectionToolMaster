<Window x:Class="FolderProtectionToolMaster.Encrypted"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FolderProtectionToolMaster"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="文件加锁-密码设置"
        Height="160"
        Width="320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="密码："
                       Width="60"
                       VerticalAlignment="Center" />
            <PasswordBox x:Name="Password1"
                     Width="200"
                     Height="30"
                     Margin="10,0"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="确认密码："
                       Width="60"
                       VerticalAlignment="Center" />
            <PasswordBox x:Name="Password2"
                     Width="200"
                     Height="30"
                     Margin="10,0"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left" />
        </StackPanel>
        <Button x:Name="Encrypted_Btn" Grid.Row="2"
                Width="160"
                Height="30"
                Content="提交"
                Background="White"
                Click="Encrypted_Btn_Click" />


    </Grid>
</Window>
